# DSA Solver AI Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# Euri AI API Key (Required)
# Get your API key from: https://euri.ai
EURI_API_KEY=your_euri_api_key_here

# Optional: OpenAI API Key (if using OpenAI models directly)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Google Gemini API Key (if using Gemini models directly)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Anthropic API Key (if using Claude models directly)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# MODEL PREFERENCES
# =============================================================================

# Default model to use (optional, defaults to deepseek-r1-distill-llama-70b)
# Available options:
# - openai/gpt-4o
# - anthropic/claude-sonnet-4
# - gemini-2.5-pro-preview
# - deepseek-r1-distill-llama-70b
# - llama-4-scout
DEFAULT_MODEL=deepseek-r1-distill-llama-70b

# Model temperature (0.0 to 1.0, lower = more deterministic)
MODEL_TEMPERATURE=0.1

# Maximum tokens for model responses
MODEL_MAX_TOKENS=2000

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker working directory (relative to project root)
DOCKER_WORK_DIR=tmp

# Docker execution timeout in seconds
DOCKER_TIMEOUT=120

# Docker image to use for code execution
DOCKER_IMAGE=python:3.11-slim

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Maximum number of turns in agent conversation
MAX_TURNS=15

# Termination keyword
TERMINATION_KEYWORD=STOP

# Debug mode (true/false)
DEBUG_MODE=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO